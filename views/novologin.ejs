<html>
    <head>
        <title>Quest - Cadastro</title>
        <link rel="stylesheet" href="/css/novologin.css">

    </head>
    <body> 
        <h1>Quest</h1>
        <div class="login-container">
            <div class="inputs">

                <h2 class="login">Cadastre um novo usuário!</h2>
                
                <input placeholder="Nome do Jogador: " class="inputbox" type="text" id="nome"> 
                 
                <input placeholder="Login (e-mail):" class="inputbox" type="email" id="email">
                 
                <input placeholder="Senha:" class="inputbox" type="password" id="password">
            </div>
        <div class="buttons">
            
            <input class="button" type="button" value="Criar Jogador" id="novo">
            <input class="button" type="reset" value="Limpar">
            <input class="button" type="button" value="Voltar" id="voltar">
        </div>
    </div>
    </body>

    <script
        src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
        crossorigin="anonymous">
    </script>

    </script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js">

    <script>
        //Botão voltar
        botaoVoltar = $("#voltar").click(() => {
            location.href="/"
        })

        //Botão novo jogador
        const botaoNovoJogador = $("#novo").click(() => {
            nameNovo = $("#nome").val()
            emailNovo = $("#email").val()
            passwordNovo = $("#password").val()

            if (!nameNovo || !emailNovo || !passwordNovo ) {
                alert("Por favor preencher todos os campos antes de tentar novamente.")
            } else {

                usuarioNovo = {
                    name: nameNovo,
                    email: emailNovo,
                    password: passwordNovo
                    
                }

                console.log(usuarioNovo)

                /$.ajax({
                    url: "/auth/register",
                    type: 'POST',
                    data: usuarioNovo,
                    success: function(resposta) {
                        alert("Usuário cadastrado com sucesso!")
                        location.href="/"
                    },
                    error: function(xhr) {
                        alert("Falha ao cadastrar. Por favor utilize outro e-mail!")
                    }
                });
            }
        })

    </script>
</html>